<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Weather.View.WeatherView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:vm="clr-namespace:Weather.ViewModel"
    Title="Weather App">
    <ContentPage.BindingContext>
        <vm:WeatherViewModel />
    </ContentPage.BindingContext>

    <Grid Margin="10" RowDefinitions=".08*, .1*, .5*, .1*, .3*">
        <Grid>
            <Frame VerticalOptions="Center" />
            <SearchBar Placeholder="Search" VerticalOptions="CenterAndExpand" />
        </Grid>
        <VerticalStackLayout Grid.Row="1" Style="{StaticResource MainStackLayout}">
            <Label Style="{StaticResource Title}" Text="Paris" />
            <Label Text="July 8th, 2023" />
        </VerticalStackLayout>
        <skia:SKLottieView
            Grid.Row="2"
            RepeatCount="-1"
            Source="foggy.json" />
    </Grid>
</ContentPage>